@model WebAppXyrilleFirstSem.Web.Infrastructures.Domain.Models.Research
@{
    Layout = "~/areas/manage/views/shared/_managelayout.cshtml";
}

<h1>Details</h1>


<div>
    <h4>Title: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.ResearchStatus
        </dd>
       

    </dl>
</div>
<div>
    <a href="~/manage/researches/edit/@Model.Id" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
    <a href="~/manage/researches/index" class="btn btn-danger">Back to List</a>
</div>